<script>
  function check_pass(){
    if (document.getElementById('password').value==document.getElementById('confirmation').value){
      document.getElementById('submit').disabled = false;
    }
    else {
      document.getElementById('submit').disabled = true;
    }
  }
</script>

<h2>Sign up</h2>
<form action="/users" method="post" role="form">
  <div class="form-group">
    <label for="username">Name:</label>
    <br>
    <input id="username" class="form-control" name="user[username]" type="text"/>
  </div>
  <div class="form-group">
    <label for="password">Password:</label>
    <br>
    <input id="password" class="form-control" name="user[password]" type="password" onchange='check_pass();'/>
  </div>
  <div class="form-group">
    <label for="confirmation">Confirm your password:</label>
    <br>
    <input id="confirmation" class="form-control" type="password" onchange='check_pass();'/>
  </div>
  <button type="submit" class="btn btn-success" id="submit" disabled>Submit</button>
</form>

